{{ header }}
<div id="account-usdt-recharge" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>

  <div class="row">
    <div id="content" class="col">
      <h1 class="mb-3">{{ heading_title }}</h1>

      {% if success %}
        <div class="alert alert-success alert-dismissible"><i class="fa-solid fa-circle-check"></i> {{ success }}</div>
      {% endif %}

      {% if error_warning %}
        <div class="alert alert-danger alert-dismissible"><i class="fa-solid fa-circle-exclamation"></i> {{ error_warning }}</div>
      {% endif %}

      <div class="row g-4">
        <div class="col-lg-7">
          <div class="card shadow-sm">
            <div class="card-body">
              <p class="text-muted">{{ text_description }}</p>
              <h4 class="mt-4">{{ text_wallet_title }}</h4>
              <p class="small text-secondary">{{ text_wallet_note }}</p>
              <div class="list-group mb-4">
                {% for wallet in wallets %}
                  <div class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                      <span class="fw-semibold">{{ wallet.network }}</span>
                      <button type="button" class="btn btn-outline-secondary btn-sm" data-copy="{{ wallet.address }}">{{ text_copy }}</button>
                    </div>
                    <code class="small text-break">{{ wallet.address }}</code>
                  </div>
                {% endfor %}
              </div>
              <h5>{{ text_steps_title }}</h5>
              <ul class="list-unstyled small mb-0">
                <li>{{ text_step_1 }}</li>
                <li>{{ text_step_2 }}</li>
                <li>{{ text_step_3 }}</li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-lg-5">
          <div class="card shadow-sm">
            <div class="card-body">
              <p class="fw-semibold">{{ text_current_balance }}: <span class="text-primary">{{ balance }}</span></p>
              <form action="{{ action }}" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="input-network" class="form-label">{{ entry_network }}</label>
                  <select name="network" id="input-network" class="form-select">
                    <option value="">{{ text_network_placeholder }}</option>
                    {% for option in networks %}
                      <option value="{{ option }}"{% if option == network %} selected{% endif %}>{{ option }}</option>
                    {% endfor %}
                  </select>
                  {% if error_network %}<div class="text-danger small">{{ error_network }}</div>{% endif %}
                </div>
                <div class="mb-3">
                  <label for="input-amount" class="form-label">{{ entry_amount }}</label>
                  <input type="number" step="0.0001" min="0" name="amount" value="{{ amount }}" id="input-amount" class="form-control" placeholder="0.00"/>
                  {% if error_amount %}<div class="text-danger small">{{ error_amount }}</div>{% endif %}
                </div>
                <div class="mb-3">
                  <label for="input-txhash" class="form-label">{{ entry_txhash }}</label>
                  <input type="text" name="txhash" value="{{ txhash }}" id="input-txhash" class="form-control" placeholder="0x / TX..."/>
                  {% if error_txhash %}<div class="text-danger small">{{ error_txhash }}</div>{% endif %}
                </div>
                <div class="mb-3">
                  <label for="input-receipt" class="form-label">{{ entry_receipt }}</label>
                  <input type="file" name="receipt" id="input-receipt" class="form-control" accept=".jpg,.jpeg,.png"/>
                  {% if error_receipt %}<div class="text-danger small">{{ error_receipt }}</div>{% endif %}
                  <div class="form-text text-muted">{{ text_receipt_hint }}</div>
                  <div id="receipt-preview" class="mt-3 d-none">
                    <img src="" alt="receipt preview" class="img-thumbnail w-100" style="max-height: 320px; object-fit: contain;"/>
                  </div>
                </div>
                <div class="d-grid gap-2">
                  <button type="submit" class="btn btn-primary">{{ button_submit }}</button>
                  <a href="{{ back }}" class="btn btn-outline-secondary">{{ button_back }}</a>
                </div>
              </form>
            </div>
          </div>
          <p class="text-muted mt-3 small">{{ text_contact_support }}</p>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
document.querySelectorAll('[data-copy]').forEach(function(btn) {
  btn.addEventListener('click', function() {
    navigator.clipboard.writeText(this.getAttribute('data-copy')).then(() => {
      this.classList.remove('btn-outline-secondary');
      this.classList.add('btn-success');
      this.innerText = '{{ text_copy }} âœ“';
      setTimeout(() => {
        this.classList.add('btn-outline-secondary');
        this.classList.remove('btn-success');
        this.innerText = '{{ text_copy }}';
      }, 2000);
    });
  });
});

const receiptInput = document.getElementById('input-receipt');
const previewWrapper = document.getElementById('receipt-preview');
const previewImage = previewWrapper ? previewWrapper.querySelector('img') : null;

if (receiptInput && previewWrapper && previewImage) {
  receiptInput.addEventListener('change', function () {
    const file = this.files && this.files[0] ? this.files[0] : null;

    if (!file) {
      previewWrapper.classList.add('d-none');
      previewImage.src = '';
      return;
    }

    if (!file.type.match(/^image\/(jpeg|png)$/i)) {
      previewWrapper.classList.add('d-none');
      previewImage.src = '';
      return;
    }

    const reader = new FileReader();
    reader.onload = function (event) {
      previewImage.src = event.target.result;
      previewWrapper.classList.remove('d-none');
    };
    reader.readAsDataURL(file);
  });
}
</script>
{{ footer }}
