{% import _self as tree %}

{% macro render_nodes(nodes) %}
  {% if nodes %}
    <ul class="category-tree__list">
      {% for node in nodes %}
        {% set item_classes = ['category-tree__item'] %}
        {% if node.has_children %}
          {% set item_classes = item_classes|merge(['has-children']) %}
        {% endif %}
        {% if node.active %}
          {% set item_classes = item_classes|merge(['is-open']) %}
        {% endif %}
        {% if node.current %}
          {% set item_classes = item_classes|merge(['is-current']) %}
        {% elseif node.active %}
          {% set item_classes = item_classes|merge(['is-active']) %}
        {% endif %}
        {% set list_id = 'category-branch-' ~ node.path|replace({'_':'-'}) %}
        <li class="{{ item_classes|join(' ') }}" data-category-id="{{ node.category_id }}">
          <div class="category-tree__entry">
            {% if node.has_children %}
              <button type="button" class="category-tree__toggle" data-tree-toggle aria-expanded="{{ node.active ? 'true' : 'false' }}" aria-controls="{{ list_id }}">
                <i class="fa-solid fa-angle-right"></i>
              </button>
            {% else %}
              <span class="category-tree__toggle category-tree__toggle--empty"></span>
            {% endif %}
            <a href="{{ node.href }}" class="category-tree__link">{{ node.name }}</a>
          </div>
          {% if node.children %}
            <div class="category-tree__children" id="{{ list_id }}">
              {{ tree.render_nodes(node.children) }}
            </div>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}

<div id="content">
